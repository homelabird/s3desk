# Live UI E2E (Playwright) CI variables
# NOTE: E2E_S3_ENDPOINT is used by the API service; it must be reachable from the s3desk container.
#       In container networks, avoid 127.0.0.1 and use service DNS (e.g. http://minio:9000).

E2E_LIVE=1
E2E_BASE_URL=http://s3desk:8080
E2E_API_TOKEN=change-me

E2E_S3_ENDPOINT=http://minio:9000
E2E_S3_REGION=us-east-1
E2E_S3_ACCESS_KEY=minioadmin
E2E_S3_SECRET_KEY=minioadmin
E2E_S3_FORCE_PATH_STYLE=true
E2E_S3_TLS_SKIP_VERIFY=true

# Optional: provider policy live smoke extensions (bucket-policy-live.spec.ts)
# GCS (requires an existing bucket with IAM policy to avoid destructive mutation)
E2E_GCS_POLICY_LIVE=0
E2E_GCS_BUCKET=
E2E_GCS_SERVICE_ACCOUNT_JSON=
E2E_GCS_ENDPOINT=
E2E_GCS_PROJECT_NUMBER=
E2E_GCS_TLS_SKIP_VERIFY=0

# Azure Blob (runs get/put/get and restores original container policy)
E2E_AZURE_POLICY_LIVE=0
E2E_AZURE_CONTAINER=
E2E_AZURE_ACCOUNT_NAME=
E2E_AZURE_ACCOUNT_KEY=
E2E_AZURE_ENDPOINT=
E2E_AZURE_USE_EMULATOR=0
E2E_AZURE_TLS_SKIP_VERIFY=0

# Optional when UI/Docs/Perf are split:
PLAYWRIGHT_BASE_URL=http://s3desk:8080
DOCS_BASE_URL=http://s3desk:8080
PERF_BASE_URL=http://s3desk:8080

# Optional: policy live summary artifact path (default: frontend/test-results/policy-live-summary.ndjson)
E2E_POLICY_SUMMARY_FILE=test-results/policy-live-summary.ndjson
